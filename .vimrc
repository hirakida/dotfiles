syntax on
colorscheme molokai

set encoding=utf-8
set number
set ruler
set cursorline
set cursorcolumn
set list
set display=lastline

set noswapfile

set showmatch
set matchtime=1

" last line
set laststatus=2
set showcmd
set showmode

" tab, indent
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
set smartindent

" search
set incsearch
set hlsearch
set ignorecase
set smartcase
set wrapscan

" wild
set wildmenu
set wildmode=list:full

nnoremap + <C-a>
nnoremap - <C-x>
