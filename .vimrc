syntax on
colorscheme molokai

set encoding=utf-8
set number
set ruler
set noswapfile
set smartindent
set showmatch
set matchtime=1
set showmode
set display=lastline

" list
set list
"set listchars=tab:>-,trail:-,eol:$

" cursor
set cursorline
set cursorcolumn

" status line
set laststatus=2

" tab
set expandtab
set tabstop=4
set shiftwidth=4

" search
set incsearch
set wrapscan
set ignorecase
set smartcase
set hlsearch

" wild
set wildmenu
set wildmode=list:full

nnoremap + <C-a>
nnoremap - <C-x>
